<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:seekbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#888888">
            <ImageView
                android:id="@+id/center_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ViewSwitcher
                android:id="@+id/article_equalizer_switcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?selectableItemBackground"
                android:inAnimation="@android:anim/fade_in"
                android:outAnimation="@android:anim/fade_out">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="152dp"
                        android:layout_gravity="center">
                        <ImageButton
                            android:id="@+id/anchor_avatar"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="top"
                            android:background="?buttonBackground"
                            android:src="@drawable/ic_launcher_square"/>
                        <TextView
                            android:id="@+id/anchor_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom|center_horizontal"/>

                    </android.support.v7.widget.CardView>
                    <com.project.sky31radio.view.EqualizerView
                        android:id="@+id/visualizer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:visibility="gone"
                        app:waveColor="#77FFFFFF"
                        app:waveWidth="16dp"
                        app:waveDividerWidth="8dp"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:textColor="#aa000000"
                    android:background="#66FFFFFF"
                    tools:text="加载中..."
                    android:clipToPadding="false"/>
            </ViewSwitcher>
            <TextView
                android:id="@+id/program_played_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="4dp"
                android:shadowColor="@android:color/black"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="播放: 1111" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/player_background"
            android:elevation="8dp">

            <!--<TextView-->
                <!--android:id="@+id/program_played_count"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:shadowColor="@android:color/black"-->
                <!--android:shadowDy="5"-->
                <!--android:shadowRadius="12"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textStyle="bold"-->
                <!--tools:text="播放次数:1111" />-->
            <com.project.sky31radio.view.PlayPauseButton
                android:id="@+id/btn_play_pause"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="96dp"
                android:layout_centerInParent="true"
                android:background="?buttonBackground"
                app:pauseSrc="@drawable/ic_action_play_circle_outline"
                app:playSrc="@drawable/ic_action_pause_circle_outline" />

            <ImageButton
                android:id="@+id/btn_skip_previous"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="96dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/btn_play_pause"
                android:background="?buttonBackground"
                android:src="@drawable/ic_action_skip_next" />

            <ImageButton
                android:id="@+id/btn_skip_next"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="96dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/btn_play_pause"
                android:background="?buttonBackground"
                android:src="@drawable/ic_action_skip_previous" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/duration_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:layout_marginRight="8dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="--:--"/>
        <TextView
            android:id="@+id/position_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="00:00"/>
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/progress_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-18dp"
            android:layout_marginRight="-18dp"
            android:layout_alignParentBottom="true"
            seekbar:dsb_max="100"
            seekbar:dsb_min="0"
            seekbar:dsb_progressColor="#388E3C"
            seekbar:dsb_indicatorColor="#388E3C"
            seekbar:dsb_value="100"/>
    </RelativeLayout>
    <include layout="@layout/toolbar_shadow"/>
</FrameLayout>