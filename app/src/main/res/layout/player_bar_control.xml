<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_bar_height"
    android:background="@color/player_background"
    android:elevation="4dp">
    <ImageView
        android:id="@+id/player_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_smalllogo"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:id="@+id/player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/player_thumbnail"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/playPauseProgressButton"
        android:dividerPadding="4dp">
        <TextView
            android:id="@+id/player_program_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAFFFFFF"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="AG电子音乐"/>
        <TextView
            android:id="@+id/player_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAF1F1F1"
            android:textSize="12sp"
            android:text="聆听青春的声音"/>
    </LinearLayout>

    <include layout="@layout/play_pause_progress_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_height="32dp"
        android:layout_width="32dp"/>
    <ImageButton
        android:id="@+id/action_share"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_share"
        android:background="?attr/buttonBackground"
        android:visibility="gone"
        android:layout_marginRight="16dp"/>
</RelativeLayout>